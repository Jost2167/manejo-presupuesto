@model TipoCuenta

@{
    ViewData["Title"] = "Crear tipo de cuenta";
}

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body>
<div>
    <h1>Crear tipo de cuenta</h1>
    
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    <form asp-controller="TiposCuentas" asp-action="Crear">
        <div class="mb-3">
            <label asp-for="Nombre" class="form-label"></label>
            <input type="text" asp-for="Nombre" class="form-control"/>
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        
        <button type="submit" class="btn btn-primary">Enviar</button>
        <a asp-action="Index" class="btn btn-danger">Cancelar</a>
    </form>
    
    
    @* Permite agrega los Script que implementara _Layout.cshtml para esta vista unicamente *@
    @section Scripts
    {
        @* Script para validaciones desde el cliente *@
        <partial name="_ValidationScriptsPartial"/>
    }
    
</div>
</body>
</html>